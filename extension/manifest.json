{
  "manifest_version": 3,
  "name": "DSA Skill Tree Sync",
  "version": "1.1",
  "description": "Real-time DSA World Map progress tracker with auto-sync and account verification.",
  "permissions": ["storage", "activeTab"],
  "host_permissions": [
    "https://leetcode.com/*",
    "http://localhost:8080/*",
    "http://localhost:3000/*"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://leetcode.com/problems/*",
        "https://leetcode.com/submissions/*"
      ],
      "js": ["injected.js"],
      "run_at": "document_start",
      "world": "MAIN"
    },
    {
      "matches": [
        "https://leetcode.com/problems/*",
        "https://leetcode.com/submissions/*"
      ],
      "js": ["content-script.js"],
      "run_at": "document_idle"
    },
    {
      "matches": ["http://localhost:3000/*"],
      "js": ["content-script.js"],
      "run_at": "document_idle"
    }
  ]
}